# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good ="#5CB5E6"
        color_bad = "#DC322F"
        color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

cpu_usage {
        format = "⏲ %usage "
}


disk "/" {
        # format = " hdd %avail "
        format = " ⛁ %avail "
}

volume master {
        format = " %volume"
        format_muted = " muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        # format_up = " %essid (%quality) %bitrate ➜ %ip"
        format_up = "%essid (%quality) %bitrate ➜ %ip"
        format_down = ""
}

ethernet _first_ {
        # format_up = " %speed ➜ %ip"
        format_up = "%speed ➜ %ip"
        format_down = ""
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        # status_bat = "bat"
        status_bat = ""
        # status_bat = ""
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        status_full = ""
        low_threshold = 20
        threshold_type = percentage 
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = "%a, %b %d %I:%M %p "
}
