#!/bin/bash

CONFIG=$( echo -e "i3\ni3status\nvim" | dmenu -i -p "Config" -F -fn "monospace-13" -nb "#222526" -nf "#93A1A1" -sb "#268BD2" -sf "#002B36")

i3=~/.config/i3/config
i3status=~/.config/i3status/config
vim=~/.vimrc

if [[ "$CONFIG" != "" ]]; then
  if [[ $CONFIG == i3 ]]; then
    i3-sensible-terminal -e $i3
  elif [[ $CONFIG ==  i3status ]]; then
    i3-sensible-terminal -e $i3
  elif [[ $CONFIG ==  vim ]]; then
    i3-sensible-terminal -e $vim
  fi
fi
