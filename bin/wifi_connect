#!/bin/bash

ESSID=$(nmcli d wifi list | grep "Mbit/s" | awk '{print $1}' | grep -v "*\|--" | dmenu -l 10 -i -p "Wifi Network" -F -fn "monospace-13" -nb "#222526" -nf "#93A1A1" -sb "#268BD2" -sf "#002B36")

if [[ "$ESSID" != "" ]]
then
	PASSWORD=$(echo "" | dmenu -i -p "Password" -F -fn "monospace-13" -nb "#222526" -nf "#93A1A1" -sb "#268BD2" -sf "#002B36")
	if [[ "$PASSWORD" != "" ]]
	then
		nmcli d wifi connect "$ESSID" password "$PASSWORD"
	fi
fi
