#!/bin/zsh

QUERY=$(cat ~/.config/BraveSoftware/Brave-Browser/Default/Bookmarks | grep "http[s]*://*" | awk '{$1=""};1' | sed s/\"//g | sed s/" "//g | dmenu -p "Search" -i -F -fn "monospace-13" -nb "#222526" -nf "#93A1A1" -sb "#268BD2" -sf "#002B36")
if [ "$QUERY" != "" ]
then
	if [ "$(echo "$QUERY" | grep 'http[s]*://*.*')" != "" ]
	then
		xdg-open "$QUERY"
	else
		QUERY=$(sed s/" "/"+"/g <<< "$QUERY")
		xdg-open "https://duckduckgo.com/?q=$QUERY"
	fi
fi
